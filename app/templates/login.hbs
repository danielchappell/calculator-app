<div class="row white z-depth-1">
    <div class="col s8 offset-s2">
        <h1>Sign in</h1>
        <div class="row">
            <div class="col s12">
                {{#link-to 'user.new'}}Not a user Yet? Sign up!{{/link-to}}
            </div>
            <div class="col s12">
                <form {{action "login" model.username model.password on="submit"}}>
                    <div class="row">
                        <div class="col s12">
                            <p class="error-message">{{errorMessage}}</p>
                        </div>
                        <div class="input-field col s12">
                            {{input id="username" type="text" value=model.username}}{{!--  placeholder="your_user_name_here234" --}}
                            <label for="username">Username</label>
                        </div>
                        <div class="input-field col s12">
                            {{input id="password" type="password" value=model.password}}{{!--  placeholder="notYourDogsName23!%" --}}
                            <label for="password">Password</label>
                        </div>
                    </div>
                    <button class="waves-effect waves-light btn" type="submit">Sign in!</button>
                </form>
            </div>
        </div>
    </div>
</div>
